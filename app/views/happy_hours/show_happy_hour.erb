<h2><%= @hh.locale %>, <%= @hh.date %></h2>
<ul>
  <li><strong>Food:</strong> <%= @hh.food %></li>
  <li><strong>Drink:</strong> <%= @hh.drink %></li>
  <li><strong>Friends:</strong> <%= @hh.friends %></li>
  <li><strong>Rating:</strong> <%= @hh.rating %></li>
</ul>
<div class="frmBtn">
<form action="/happy_hours/<%= @hh.id %>/edit">
    <input type="submit" value="Edit" />
</form>
<form action="/happy_hours/<%= @hh.id %>/delete" method="POST">
  <input type="hidden" id="hidden" value="delete" name="_method">
    <input type="submit" value="Delete" />
</form>
<form action="/happy_hours">
    <input type="submit" value="Home" />
</form>
<form action="/happy_hours/new">
    <input type="submit" value="Log a New Journal Entry" />
</form>
<form action="/logout">
    <input type="submit" value="Logout" />
</form>
</div>
<p></p>
